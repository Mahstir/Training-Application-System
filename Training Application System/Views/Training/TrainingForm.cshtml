@model Training_Application_System.Models.Training

@{
    ViewBag.Title = "TrainingForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TrainingForm</h2>

@using (Html.BeginForm("Save", "Training"))
            {
<div class="form-group">
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m =>m.Name, new { @class = "form-control" })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Date)
    @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Duration)
    @Html.TextBoxFor(m => m.Duration, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Capacity)
    @Html.TextBoxFor(m => m.Capacity, new { @class = "form-control" })
</div>

@Html.HiddenFor(m => m.Id)

    <button type="submit" class="btn btn-primary">Save</button>

            }

